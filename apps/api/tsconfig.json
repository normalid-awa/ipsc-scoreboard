{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"disableSizeLimit": true
	},
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"esm": true,
		"transpileOnly": true
	}
}
